# AIXCL Environment Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# PostgreSQL Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=changeme
POSTGRES_DATABASE=webui
POSTGRES_CONTINUE_DATABASE=continue

# pgAdmin Configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=changeme

# Open WebUI Configuration
OPENWEBUI_EMAIL=admin@example.com
OPENWEBUI_PASSWORD=changeme

# LLM Council Configuration
BACKEND_MODE=ollama
OLLAMA_BASE_URL=http://localhost:11434
OPENROUTER_API_KEY=
COUNCIL_MODELS=
CHAIRMAN_MODEL=
ENABLE_DB_STORAGE=true
FORCE_STREAMING=true
ENABLE_MARKDOWN_FORMATTING=true

# Grafana Configuration (Optional - for ops/sys profiles)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme

# Profile Selection (usr, dev, ops, sys)
# AIXCL_PROFILE=dev
