# Grafana Datasource Configuration
# This file automatically provisions Prometheus and Loki as datasources in Grafana

apiVersion: 1

datasources:
  # Prometheus datasource
  - name: Prometheus
    type: prometheus
    access: proxy
    url: http://127.0.0.1:9090
    uid: prometheus
    isDefault: true
    editable: true

  # Loki datasource
  - name: Loki
    type: loki
    access: proxy
    url: http://127.0.0.1:3100
    uid: loki
    isDefault: false
    editable: true